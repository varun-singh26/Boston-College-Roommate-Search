{
  "functions": {
    "source": "functions",
    "timeoutSeconds": 300
  },
  "hosting": {
    "host": "localhost",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
